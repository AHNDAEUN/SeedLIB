<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.seed.lib.book.BookMapper">

	<!-- 도서 디테일 -->
	<select id="getDetail" resultMap="getDetailResult" parameterType="BookVO">
		SELECT B.* FROM BOOK B
		WHERE B.ISBN = #{isbn}
	</select>
	
	<resultMap type="BookVO" id="getDetailResult">
		<id column="isbn" property="isbn" />
			<result column="title" property="title"/>
			<result column="writer" property="writer"/>
			<result column="publisher" property="publisher"/>
			<result column="bDate" property="bDate"/>
			<result column="able" property="able"/>
			<result column="category" property="category"/>
			<result column="quantity" property="quantity"/>
			<result column="image" property="image"/>
			<result column="bCount" property="bCount"/>
			<result column="bHeart" property="bHeart"/>
			
			<collection property="libVOs" javaType="List" ofType="LibVO">
				<id column="blNum" property="blNum"/>
				<result column="lNum" property="lNum"/>
				<result column="lName" property="lName"/>
				<result column="lPlace" property="lPlace"/>
			</collection>
	</resultMap>

</mapper>